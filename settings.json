{
  "workbench.colorTheme": "oh-lucy",
  "editor.fontFamily":
    "'Cascadia Code', 'JetBrains Mono Nerd Font' ,  'Courier New', monospace",
  "editor.lineHeight": 1.4,
  "terminal.integrated.fontFamily": "Cascadia Code PL",
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.fontSize": 14,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.fontLigatures": "'calt', 'ss01'",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "terminal.external.linuxExec": "kitty",
  "terminal.integrated.defaultProfile.linux": "zsh",

  "window.zoomLevel": -0.5,
  "postcssSorting.config": {
    "order": ["declarations", "at-rules", "rules"],
    "properties-order": [
      "display",
      "position",
      "top",
      "right",
      "bottom",
      "left"
    ]
  },

  "files.associations": {
    "*.css": "tailwindcss"
  },

  "editor.quickSuggestions": {
    "strings": true
  },

  "tailwindCSS.emmetCompletions": true,

  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["g", "c"],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": [":-10"],
      "silent": true
    },
    {
      "before": ["J"],
      "commands": [":+10"],
      "silent": true
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"],
      "silent": true
    },
    {
      "before": ["<leader>", "e", "w"],
      "commands": [":wq"],
      "silent": true
    },
    {
      "before": ["<leader>", "x"],
      "commands": [":q"],
      "silent": true
    },
    {
      "before": ["<leader>", "c", "l"],
      "after": ["g", "c", "c"],
      "silent": true
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "silent": true
    },
    {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    {
      "before": ["leader", "l", "f"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    {
      "before": ["leader", "m"],
      "commands": ["editor.action.formatDocument", "postcssSorting.execute"],
      "silent": true
    },
    {
      "before": ["leader", "t", "f"],
      "commands": ["workbench.action.terminal.toggleTerminal"],
      "silent": true
    }
  ],
  "vim.mouseSelectionGoesIntoVisualMode": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vscode-pets.petColor": "gray",
  "workbench.iconTheme": "bearded-icons",
  "workbench.productIconTheme": "icons-carbon",
  "editor.codeLensFontFamily": "'Cascadia Code'",
  "editor.cursorBlinking": "expand",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.autofetch": true,
  "prettier.jsxSingleQuote": true,
  "prettier.useTabs": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  }
}
